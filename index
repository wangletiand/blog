<body>
    <header>
        <h1>我的简约博客</h1>
        <p>分享想法与故事</p>
    </header>

    <main id="blogPosts">
        <!-- 博客文章由JavaScript动态生成 -->
    </main>

    <footer>
        <p>© 2023 简约博客 | 基于 Cloudflare Pages</p>
    </footer>

    <script>
        // 博客数据 - 可以在此处添加/修改文章
        const blogData = [
            {
                id: 1,
                title: "欢迎来到我的博客",
                date: "2023-06-15",
                content: "这是我的第一篇博客文章。这里将分享技术思考和日常生活。Cloudflare Pages 提供了完美的托管解决方案！"
            },
            {
                id: 2,
                title: "关于静态网站的优势",
                date: "2023-06-18",
                content: "静态网站加载速度快、安全性高、成本低，非常适合个人博客。配合Cloudflare全球CDN，访问体验极佳。"
            },
            {
                id: 3,
                title: "未来计划",
                date: "2023-06-20",
                content: "计划添加：1. 文章分类标签 2. 夜间模式 3. 搜索功能。欢迎提出建议！"
            }
        ];

        // 渲染博客文章
        function renderPosts() {
            const container = document.getElementById('blogPosts');
            container.innerHTML = '';
            
            blogData.forEach(post => {
                const postEl = document.createElement('article');
                postEl.className = 'post';
                postEl.innerHTML = `
                    <h2>${post.title}</h2>
                    <div class="post-date">${post.date}</div>
                    <div class="post-content">${post.content}</div>
                `;
                container.appendChild(postEl);
            });
        }

        // 初始化
        document.addEventListener('DOMContentLoaded', renderPosts);
    </script>
</body>
</html>
